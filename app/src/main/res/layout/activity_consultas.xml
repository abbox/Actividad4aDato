<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.aboubakr.actividad4adato.Consultas">


    <Spinner
        android:id="@+id/idSpinnerSelecion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp">

    </Spinner>

    <TextView
        android:id="@+id/etiSelecion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/idSpinnerSelecion"
        android:layout_below="@+id/idSpinnerSelecion"
        android:layout_marginTop="46dp"
        android:text="Resulta de las consultas"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="19dp"
        android:layout_toStartOf="@+id/buttonatras"
        android:text="Consultas"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonatras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="71dp"
        android:layout_marginEnd="47dp"
        android:text="Atras" />

    <ListView
        android:id="@+id/listViewEstudiCurso"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/etiSelecion"
        android:layout_alignParentStart="true">

    </ListView>

</RelativeLayout>
