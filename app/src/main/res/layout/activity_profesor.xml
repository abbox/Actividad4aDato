<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aboubakr.actividad4adato.Profesor">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNomPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nombre" />

        <EditText
            android:id="@+id/ediNomPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />
        <TextView
            android:id="@+id/txtEdaPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad" />

        <EditText
            android:id="@+id/ediEdaPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />
        <TextView
            android:id="@+id/txtCilPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ciclo" />

        <EditText
            android:id="@+id/ediCilPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />
        <TextView
            android:id="@+id/txtCurPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curso tutor" />

        <EditText
            android:id="@+id/ediCursPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />
        <TextView
            android:id="@+id/txtDesPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Despacho" />

        <EditText
            android:id="@+id/ediDesPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <Button
            android:id="@+id/btnGuardarPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar" />

        <Button
            android:id="@+id/btnAtrasPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="11"
            android:text="Atras" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="283dp"
            android:layout_height="52dp"
            android:layout_column="0"
            android:layout_row="12"
            android:text="Para poder borrar introduzca el nombre de la perosna que desea"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/ediBorrrado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <Button
            android:id="@+id/btnConsultar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="10"
            android:text="Consultar" />

        <Button
            android:id="@+id/btnBorrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="13"
            android:text="Borrar" />
    </GridLayout>
</LinearLayout>
